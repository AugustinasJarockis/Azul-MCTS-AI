<Window x:Class="AzulBoardGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzulBoardGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000">
    <Canvas x:Name="MainCanvas" Focusable="True">
        <Canvas.Background>
            <ImageBrush ImageSource="pack://application:,,,/Textures/background.jpg" Stretch="UniformToFill" Opacity="0.5"/>
        </Canvas.Background>
        <Canvas.RenderTransform>
            <TransformGroup>
                <TranslateTransform x:Name="BoardPos" X="0" Y="0" />
                <ScaleTransform x:Name="BoardZoom" ScaleX="1" ScaleY="1" />
            </TransformGroup>
        </Canvas.RenderTransform>
    </Canvas>
</Window>
